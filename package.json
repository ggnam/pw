{
    "name": "learn-playwright",
    "version": "1.0.0",
    "description": "Playwright",
    "type": "module",
    "scripts": {
        "serve": "http-server -p 8080",
        "test": "playwright test",
        "test:debug": "playwright test --headed --slowMo=50",
        "test:chromium": "playwright cr https://example.org",
        "test:firefox": "playwright ff https://example.org",
        "test:webkit": "playwright wk https://example.org",
        "test:ui": "playwright test --config=api.config.js",
        "generate": "playwright codegen https://example.com",
        "generate:hnt": "playwright codegen https://m.hanatour.com",
        "start": "node src/login.js",
        "gen:screenshot": "playwright screenshot https://hanatour.com hanatour.png",
        "gen:pdf": "playwright pdf https://m.hanatour.com example.pdf"
    },
    "devDependencies": {
        "@playwright/test": "^1.37.1",
        "http-server": "^14.1.1"
    }
}
